{
  "$schema": "./settings.schema.json",
  "framework": {
    "name": "claude-code-project-start-pack",
    "version": "2.0.0",
    "description": "Combined architecture for AI-assisted development"
  },
  "preset": "verbose",
  "execution": {
    "mode": "verbose",
    "parallelism": true,
    "pythonPath": "auto"
  },
  "autoUpdate": {
    "enabled": true,
    "confirmBeforeUpdate": true,
    "channel": "stable"
  },
  "protocols": {
    "coldStart": {
      "enabled": true,
      "autoDetect": true,
      "triggers": ["start", "resume", "continue", "begin"],
      "maxContextTokens": 3000,
      "loadOnStart": [
        "dev-docs/snapshot.md",
        "dev-docs/to-do.md"
      ],
      "loadOnDemand": [
        "dev-docs/prd.md",
        "dev-docs/trd.md",
        "dev-docs/architecture.md"
      ]
    },
    "completion": {
      "enabled": true,
      "autoDetect": true,
      "triggers": ["done", "finish", "end session", "stop"],
      "autoCommit": false,
      "requireReview": true,
      "exportDialog": true,
      "updateSnapshot": true
    },
    "autoTriggers": {
      "enabled": true,
      "mode": "assisted",
      "linesChangedThreshold": 100,
      "filesChangedThreshold": 5,
      "idleTimeMinutes": 30,
      "completionConfidenceThreshold": 0.8,
      "analyzeLastMessages": 10
    }
  },
  "review": {
    "compulsory": true,
    "tool": "/codex-review",
    "maxRetries": 3,
    "autoFix": true,
    "showInSilentMode": "failures_only"
  },
  "security": {
    "credentialScan": true,
    "preCommitCheck": true,
    "runSecurityScripts": true,
    "blockedPatterns": [
      ".env",
      ".env.*",
      "*.key",
      "*.pem",
      "credentials.*",
      "secrets.*",
      "**/secrets/**",
      "**/credentials/**"
    ],
    "allowedPatterns": [
      ".env.example",
      ".env.template"
    ]
  },
  "documents": {
    "prd": "dev-docs/prd.md",
    "trd": "dev-docs/trd.md",
    "todo": "dev-docs/to-do.md",
    "snapshot": "dev-docs/snapshot.md",
    "architecture": "dev-docs/architecture.md",
    "changelog": "dev-docs/changelog.md"
  },
  "git": {
    "conventionalCommits": true,
    "commitTypes": ["feat", "fix", "docs", "style", "refactor", "test", "chore"],
    "requireSignoff": false,
    "coAuthor": "Claude <noreply@anthropic.com>",
    "autoPush": false,
    "confirmPush": true
  },
  "dialog": {
    "exportPath": "dialog/",
    "autoGitignore": true,
    "redactCredentials": true,
    "format": "markdown",
    "useTypeScriptExporter": true
  }
}
